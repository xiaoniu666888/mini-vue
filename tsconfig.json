{
  "compilerOptions": {
    "outDir": "./dist", // 指定输出目录
    "sourceMap": true, // 生成对应的sourcemap文件
    "target": "ES2016", // 目标语法
    "module": "ESNext", // 模块格式
    "moduleResolution": "node", // 模块解析方式
    "strict": false, // 严格模式
    "resolveJsonModule": true, // 解析json模块
    "esModuleInterop": true, // 允许通过es6语法引入commonjs模块
    "jsx": "preserve", // jsx不转义
    "lib": ["ESNext", "DOM"], // 支持的类库
    "baseUrl": ".", // 基础路径
    "paths": {
      "@vue/*": ["packages/*/src"]
    }
  }
}
